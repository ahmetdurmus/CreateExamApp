
@{
    ViewData["Title"] = "Exam";
}

<body>
    <div class="col-md-12">
        <h3 style="display:inline">@ViewBag.TitleExam</h3>
        <a asp-controller="Home" asp-action="HomePage" style="float:right; font-size:20px">Sınav Oluştur</a>
    </div>

    <hr />

    <div class="col-md-12">
        <p>@ViewBag.Context</p>
    </div>
    <div class="col-md-6" style="margin-top: 15px;">
        <p> 1) @ViewBag.Question1 </p>
        <input type="button" id="q1a" value="@ViewBag.q1a" class="form-control" style="margin-bottom: 5px;"/>
        <input type="button" id="q1b" value="@ViewBag.q1b" class="form-control" style="margin-bottom: 5px;"/>
        <input type="button" id="q1c" value="@ViewBag.q1c" class="form-control" style="margin-bottom: 5px;"/>
