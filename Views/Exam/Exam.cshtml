        <input type="button" id="q2c" value="@ViewBag.q2c" class="form-control" style="margin-bottom: 5px;"/>
        <input type="button" id="q2d" value="@ViewBag.q2d" class="form-control" style="margin-bottom: 5px;"/>

        <p style="margin-top: 15px;"> 4) @ViewBag.Question4 </p>
        <input type="button" id="q4a" value="@ViewBag.q4a" class="form-control" style="margin-bottom: 5px;"/>
        <input type="button" id="q4b" value="@ViewBag.q4b" class="form-control" style="margin-bottom: 5px;"/>
        <input type="button" id="q4c" value="@ViewBag.q4c" class="form-control" style="margin-bottom: 5px;"/>
        <input type="button" id="q4d" value="@ViewBag.q4d" class="form-control" style="margin-bottom: 5px;"/>
    </div>
    <center>
        <button id="doneExam" style="width:40%; height: 40px; margin-top:10px;" class="form-control btn btn-primary"> SINAVI TAMAMLA </button>
    </center>
</body>

